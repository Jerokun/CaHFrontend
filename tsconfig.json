{
	"compileOnSave": false,
	"compilerOptions": {
		"baseUrl": "./",
		"types": ["intern", "jest", "lodash", "angular", "node", "jasmine"],
		"outDir": "./dist/out-tsc",
		"sourceMap": true,
		"declaration": false,
		"downlevelIteration": true,
		"experimentalDecorators": true,
		"moduleResolution": "node",
		"resolveJsonModule": true,
		"importHelpers": true,
		"target": "esnext",
		"module": "esnext",
		"lib": ["esnext", "dom"]
	},
	"angularCompilerOptions": {
		"fullTemplateTypeCheck": true,
		"preserveWhitespaces": true
	},
	"include": ["./"]
}

